<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialDialog</item>
        <item name="extendedFloatingActionButtonStyle">@style/FAB.Extended</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:statusBarColor">@android:color/transparent</item>


        <!-- Navigation Drawer -->
        <item name="colorNavigationItem">@color/navigation_item_color</item>
        <item name="colorNavigationItemSelected">@color/navigation_item_color</item>
        <item name="drawableNavigationItemBackground">
            @drawable/background_navigation_item_selector
        </item>


        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="AppTheme.HomeActivity" parent="AppTheme">
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>


    <style name="AppTheme.SplashScreenActivity" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.BottomSheetDialog" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">?isLightTheme</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>