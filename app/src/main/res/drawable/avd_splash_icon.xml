<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/ic_splash_static">

    <target android:name="root_group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="@integer/splash_anim_duration"
                    android:propertyName="scaleX"
                    android:valueFrom="0.4"
                    android:valueTo="0.5"
                    android:valueType="floatType">
                    <aapt:attr name="android:interpolator">
                        <pathInterpolator android:pathData="M 0.0,0.0 c0.257,0.725 0.584,1 1.0,1.0" />
                    </aapt:attr>
                </objectAnimator>
                <objectAnimator
                    android:duration="@integer/splash_anim_duration"
                    android:propertyName="scaleY"
                    android:valueFrom="0.4"
                    android:valueTo="0.5"
                    android:valueType="floatType">
                    <aapt:attr name="android:interpolator">
                        <pathInterpolator android:pathData="M 0.0,0.0 c0.257,0.725 0.584,1 1.0,1.0" />
                    </aapt:attr>
                </objectAnimator>
            </set>
        </aapt:attr>
    </target>

    <target android:name="towers_group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="125"
                    android:propertyName="alpha"
                    android:valueFrom="0.0"
                    android:valueTo="1.0"
                    android:valueType="floatType" />
            </set>
        </aapt:attr>
    </target>

    <target android:name="bottom_bar">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="440"
                    android:propertyName="translateY"
                    android:valueFrom="18.0"
                    android:valueTo="0.0"
                    android:valueType="floatType">
                    <aapt:attr name="android:interpolator">
                        <pathInterpolator android:pathData="M 0.0,0.0 c0.257,0.725 0.584,1 1.0,1.0" />
                    </aapt:attr>
                </objectAnimator>
                <objectAnimator
                    android:duration="190"
                    android:propertyName="alpha"
                    android:valueFrom="0.0"
                    android:valueTo="1.0"
                    android:valueType="floatType" />
            </set>
        </aapt:attr>
    </target>

    <target android:name="top_left_bar">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:startOffset="30"
                    android:duration="470"
                    android:propertyName="translateX"
                    android:valueFrom="-18.0"
                    android:valueTo="0.0"
                    android:valueType="floatType">
                    <aapt:attr name="android:interpolator">
                        <pathInterpolator android:pathData="M 0.0,0.0 c0.257,0.725 0.584,1 1.0,1.0" />
                    </aapt:attr>
                </objectAnimator>
                <objectAnimator
                    android:startOffset="30"
                    android:duration="190"
                    android:propertyName="alpha"
                    android:valueFrom="0.0"
                    android:valueTo="1.0"
                    android:valueType="floatType" />
            </set>
        </aapt:attr>
    </target>

    <target android:name="top_right_bar">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:startOffset="60"
                    android:duration="440"
                    android:propertyName="translateX"
                    android:valueFrom="18.0"
                    android:valueTo="0.0"
                    android:valueType="floatType">
                    <aapt:attr name="android:interpolator">
                        <pathInterpolator android:pathData="M 0.0,0.0 c0.257,0.725 0.584,1 1.0,1.0" />
                    </aapt:attr>
                </objectAnimator>
                <objectAnimator
                    android:startOffset="60"
                    android:duration="190"
                    android:propertyName="alpha"
                    android:valueFrom="0.0"
                    android:valueTo="1.0"
                    android:valueType="floatType" />
            </set>
        </aapt:attr>
    </target>

</animated-vector>