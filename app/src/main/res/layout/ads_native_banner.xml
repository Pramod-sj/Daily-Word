<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/native_ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingHorizontal="8dp">

            <com.google.android.gms.ads.nativead.AdChoicesView
                android:id="@+id/ad_choices_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_small" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/native_ad_icon_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/margin_small"
                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/native_ad_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/ad_call_to_action"
                    android:layout_toEndOf="@id/native_ad_icon_card"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small">

                    <TextView
                        android:id="@+id/ad_headline"
                        style="@style/AppTheme.SmallTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Ad title"
                        android:textColor="@color/textColor_highEmphasis"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ad_body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ad Desc"
                        android:textSize="@dimen/text_tiny" />

                </LinearLayout>

                <TextView
                    android:id="@+id/ad_call_to_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/padding_small"
                    android:background="@drawable/background_curve"
                    android:backgroundTint="@color/colorPrimary"
                    android:paddingHorizontal="@dimen/margin_medium"
                    android:paddingVertical="@dimen/padding_small"
                    android:text="Download"
                    android:textColor="?android:attr/windowBackground"
                    android:textSize="@dimen/text_tiny" />

            </RelativeLayout>
        </LinearLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>
</layout>