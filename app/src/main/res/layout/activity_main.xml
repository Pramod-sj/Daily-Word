<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <import type="com.pramod.todaysword.util.AppTheme" />

        <import type="com.pramod.todaysword.ui.home.SelectedItem" />

        <variable
            name="mainViewModel"
            type="com.pramod.todaysword.ui.home.HomeViewModel" />

        <variable
            name="pastWordAdapter"
            type="com.pramod.todaysword.ui.home.PastWordAdapter" />

        <import type="com.pramod.todaysword.util.CommonUtils" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ui.home.HomeActivity">


        <ImageView
            android:id="@+id/home_imageView_sun"
            loadDrawable="@{(AppTheme.isNightModeActive(context))?@drawable/ic_moon:@drawable/ic_sun}"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginBottom="100dp"
            app:alpha="@{(AppTheme.isNightModeActive(context))?0.6f:1}"
            app:selected="@{true}" />


        <ImageView
            android:id="@+id/home_imageView_buildings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/buildings"
            app:alpha="@{(AppTheme.isNightModeActive(context))?0.5f:1}" />


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:liftOnScroll="true"
            app:liftOnScrollTargetViewId="@id/recyclerview_words">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/margin_medium"
                    android:paddingBottom="@dimen/padding_small">

                    <TextView
                        android:id="@+id/toolbar_title"
                        style="@style/AppTheme.Header5TextStyle.Bold"
                        switchText="@{CommonUtils.greetMessage + `, There!`}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        style="@style/AppTheme.Header5TextStyle.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{CommonUtils.getColoredSpannedText(context,`Here is your Today's Word`,12,25,@color/colorPrimary)}" />
                </LinearLayout>
            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:isScrollContainer="true"
            android:scrollbars="vertical"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/main_linearLayout_wotd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/margin_large"
                    android:paddingEnd="@dimen/margin_large"
                    android:visibility="@{mainViewModel.todaysWordOfTheDay==null?View.INVISIBLE:View.VISIBLE}">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <TextView
                            android:id="@+id/txtView_word_of_the_day"
                            style="@style/AppTheme.Header2TextStyle.Bold"
                            copyToClipBoardText="@{mainViewModel.todaysWordOfTheDay.word}"
                            rootLayout="@{coordinatorLayout}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/margin_medium"
                            android:layout_toLeftOf="@id/main_card_view_pronounce"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@{mainViewModel.todaysWordOfTheDay.word}" />


                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/main_card_view_pronounce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:hapticFeedbackEnabled="true"
                            android:onClick="@{()->mainViewModel.pronounceWord(mainViewModel.todaysWordOfTheDay.pronounceAudio)}"
                            android:src="@drawable/ic_volume_up_black_24dp"
                            app:backgroundTint="?android:attr/windowBackground"
                            app:fabSize="mini"
                            app:tint="@android:color/darker_gray" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/AppTheme.TitleTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{mainViewModel.todaysWordOfTheDay.attribute}"
                            android:textStyle="italic" />

                        <TextView
                            style="@style/AppTheme.TitleTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/padding_small"
                            android:text="@string/bullet" />

                        <TextView
                            style="@style/AppTheme.TitleTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{mainViewModel.todaysWordOfTheDay.pronounce}" />

                    </LinearLayout>

                    <TextView
                        style="@style/AppTheme.TitleTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:text="@{mainViewModel.todaysWordOfTheDay.meanings[0]}"
                        android:textSize="@dimen/text_h5" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:orientation="vertical">

                        <TextView
                            style="@style/AppTheme.SubTitleTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{`How to use `+mainViewModel.todaysWordOfTheDay.word}"
                            android:textSize="@dimen/text_sub_title"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/AppTheme.SubTitleTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{mainViewModel.todaysWordOfTheDay.examples[0]}"
                            android:textSize="@dimen/text_sub_title" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/main_recyclerview_past_words"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    android:padding="@dimen/padding_large"
                    app:adapter="@{pastWordAdapter}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="-10dp"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:onClick="@{()->mainViewModel.learnAll()}"
                    android:text="learn all"
                    android:visibility="@{(mainViewModel.wordsExceptToday.size()==6)?View.VISIBLE:View.GONE}" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
