<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.pramod.todaysword.util.CalenderUtil" />

        <import type="android.view.View" />

        <import type="com.pramod.todaysword.helper.ThemeManager" />

        <import type="com.pramod.todaysword.ui.home.SelectedItem" />

        <variable
            name="mainViewModel"
            type="com.pramod.todaysword.ui.home.HomeViewModel" />

        <variable
            name="pastWordAdapter"
            type="com.pramod.todaysword.ui.home.PastWordAdapter" />

        <import type="com.pramod.todaysword.util.CommonUtils" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeActivity">

        <ImageView
            android:id="@+id/home_imageView_sun"
            loadDrawable="@{(ThemeManager.isNightModeActive(context))?@drawable/ic_moon:@drawable/ic_sun}"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginBottom="100dp"
            app:alpha="@{(ThemeManager.isNightModeActive(context))?0.6f:1}"
            app:selected="@{true}" />

        <ImageView
            android:id="@+id/home_imageView_buildings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/buildings"
            app:alpha="@{(ThemeManager.isNightModeActive(context))?0.5f:1}" />

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:background="@{CommonUtils.resolveAttrToColor(context,android.R.attr.windowBackground)}"
            android:paddingBottom="@dimen/padding_medium"
            app:liftOnScroll="true"
            app:liftOnScrollTargetViewId="@id/nestedScroll">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_medium"
                    android:paddingBottom="@dimen/padding_medium">

                    <TextView
                        android:id="@+id/toolbar_title"
                        style="@style/AppTheme.Header5TextStyle.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{CommonUtils.greetMessage + `, There!`}" />

                    <TextView
                        style="@style/AppTheme.Header5TextStyle.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{CommonUtils.getColoredSpannedText(context,`Here is your Daily Word`,12,23,@color/colorPrimary)}" />
                </LinearLayout>
            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:isScrollContainer="true"
            android:scrollbars="vertical"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardView_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_medium"
                    android:onClick="@{()->mainViewModel.navigateToWordDetailedFromTodaysWord(mainViewModel.todaysWordOfTheDay)}"
                    android:visibility="@{mainViewModel.todaysWordOfTheDay==null?View.INVISIBLE:View.VISIBLE}"
                    app:cardElevation="@dimen/card_elevation"
                    app:shapeAppearanceOverlay="@style/CardShapeWordOfTheDay">

                    <LinearLayout
                        android:id="@+id/main_linearLayout_wotd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small">

                        <TextView
                            android:id="@+id/txtView_word_of_the_day"
                            style="@style/AppTheme.Header1TextStyle.Bold"
                            copyToClipBoardText="@{mainViewModel.todaysWordOfTheDay.word}"
                            rootLayout="@{coordinatorLayout}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@{mainViewModel.todaysWordOfTheDay.word}" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-7dp"
                            android:layout_marginBottom="-7dp"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/AppTheme.TitleTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{mainViewModel.todaysWordOfTheDay.attribute}"
                                android:textStyle="italic" />

                            <TextView
                                style="@style/AppTheme.TitleTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingHorizontal="@dimen/padding_small"
                                android:text="@string/unicode_bullet" />

                            <TextView
                                style="@style/AppTheme.TitleTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{mainViewModel.todaysWordOfTheDay.pronounce}" />

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/main_card_view_pronounce"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_small"
                                android:onClick="@{()->mainViewModel.pronounceWord(mainViewModel.todaysWordOfTheDay.pronounceAudio)}"
                                android:src="@drawable/ic_volume_up_black_24dp"
                                app:backgroundTint="?android:attr/windowBackground"
                                app:elevation="@dimen/card_elevation_min"
                                app:fabSize="mini"
                                app:tint="@color/app_icon_tint" />
                        </LinearLayout>

                        <TextView
                            style="@style/AppTheme.TitleTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:text="@{mainViewModel.todaysWordOfTheDay.meanings[0]}" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:orientation="vertical">

                            <TextView
                                style="@style/AppTheme.SubTitleTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{`How to use `+mainViewModel.todaysWordOfTheDay.word}"
                                android:textSize="@dimen/text_sub_title"
                                android:textStyle="bold" />

                            <TextView
                                style="@style/AppTheme.SubTitleTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{mainViewModel.todaysWordOfTheDay.examples[0]}"
                                android:textSize="@dimen/text_sub_title" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/main_recyclerview_past_words"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    android:paddingHorizontal="@dimen/padding_small"
                    android:paddingVertical="@dimen/padding_large"
                    app:adapter="@{pastWordAdapter}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="-10dp"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:onClick="@{()->mainViewModel.learnAll()}"
                    android:text="@string/learn_all"
                    android:visibility="@{(mainViewModel.wordsExceptToday.size()==6)?View.VISIBLE:View.GONE}" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
