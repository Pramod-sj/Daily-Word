<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.pramod.dailyword.util.CalenderUtil" />

        <import type="android.view.View" />

        <import type="com.pramod.dailyword.util.CommonUtils" />

        <import type="com.pramod.dailyword.R" />

        <variable
            name="wordDetailedViewModel"
            type="com.pramod.dailyword.ui.word_details.WordDetailedViewModel" />
    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingTop="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin_large"
                android:paddingEnd="@dimen/margin_large">

                <TextView
                    android:id="@+id/txtView_word_of_the_day"
                    style="@style/AppTheme.Header1TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{wordDetailedViewModel.wordOfTheDay.word}"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/AppTheme.TitleTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{wordDetailedViewModel.wordOfTheDay.attribute}"
                        android:textSize="@dimen/text_h5"
                        android:textStyle="italic" />

                    <TextView
                        style="@style/AppTheme.TitleTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/padding_small"
                        android:text="@string/unicode_bullet" />

                    <TextView
                        style="@style/AppTheme.TitleTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{wordDetailedViewModel.wordOfTheDay.pronounce}" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/main_card_view_pronounce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{()->wordDetailedViewModel.pronounceWord(wordDetailedViewModel.wordOfTheDay.pronounceAudio)}"
                        android:src="@drawable/ic_volume_up_black_24dp"
                        app:backgroundTint="?android:attr/windowBackground"
                        app:elevation="@dimen/card_elevation_min"
                        app:fabSize="mini"
                        app:tint="@color/app_icon_tint"
                        app:useCompatPadding="true" />
                </LinearLayout>

                <TextView
                    style="@style/AppTheme.TitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:text="@{CommonUtils.formattedListToString(wordDetailedViewModel.wordOfTheDay.meanings,`\n`)}" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="vertical">

                    <TextView
                        style="@style/AppTheme.SubTitleTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{`How to use `+wordDetailedViewModel.wordOfTheDay.word}"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/AppTheme.SmallTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{CommonUtils.formattedListToString(wordDetailedViewModel.wordOfTheDay.examples,`\n`)}" />
                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_got_to_mw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/margin_large"
            android:onClick="@{()->wordDetailedViewModel.navigateToWordMW(context.resources.getString(R.string.app_merriam_webster_icon_url)+`/`+wordDetailedViewModel.wordOfTheDay.date)}"
            android:text="@string/go_to_merriam_webster"
            android:textColor="?android:attr/windowBackground"
            app:backgroundTint="@color/colorPrimary"
            app:icon="@drawable/ic_round_format_align_left_24"
            app:iconTint="?android:attr/windowBackground" />


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:alpha="0.9"
            android:animateLayoutChanges="true"
            android:background="@{CommonUtils.resolveAttrToColor(context,android.R.attr.windowBackground)}"
            app:liftOnScroll="true"
            app:liftOnScrollTargetViewId="@id/nestedScrollView">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:animateLayoutChanges="true"
                android:gravity="center_vertical"
                app:contentInsetStart="0dp"
                app:navigationIcon="@drawable/ic_round_back_arrow">

                <!--
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:animateLayoutChanges="true"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/margin_medium"
                                        android:layout_marginEnd="@dimen/margin_medium"
                                        android:src="@drawable/ic_close_black_24dp"
                                        app:backgroundTint="?android:attr/windowBackground"
                                        app:fabSize="mini"
                                        app:elevation="@dimen/card_elevation_min"
                                        app:tint="@android:color/darker_gray"
                                        app:useCompatPadding="true" />

                                </LinearLayout>
                -->


                <TextView
                    style="@style/ToolbarTitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{wordDetailedViewModel.wordOfTheDay.word}"
                    android:visibility="@{wordDetailedViewModel.showTitle()?View.VISIBLE:View.INVISIBLE}" />

            </com.google.android.material.appbar.MaterialToolbar>


        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
