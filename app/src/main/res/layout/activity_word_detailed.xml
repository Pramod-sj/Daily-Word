<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.pramod.todaysword.util.CommonUtils" />

        <variable
            name="wordDetailedViewModel"
            type="com.pramod.todaysword.ui.word_details.WordDetailedViewModel" />
    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_large"
                android:src="@drawable/ic_close_black_24dp"
                app:tint="@android:color/darker_gray"
                app:backgroundTint="?android:attr/windowBackground"
                app:fabSize="mini" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:isScrollContainer="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/margin_large"
                    android:paddingTop="@dimen/padding_small"
                    android:paddingEnd="@dimen/margin_large"
                    android:paddingBottom="@dimen/padding_large">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <TextView
                            android:id="@+id/txtView_word_of_the_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/margin_medium"
                            android:layout_toLeftOf="@id/main_card_view_pronounce"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@{wordDetailedViewModel.wordOfTheDay.word}"
                            android:textSize="@dimen/text_h2"
                            android:textStyle="bold" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/main_card_view_pronounce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/margin_small"
                            android:onClick="@{()->wordDetailedViewModel.pronounceWord(wordDetailedViewModel.wordOfTheDay.pronounceAudio)}"
                            android:src="@drawable/ic_volume_up_black_24dp"
                            app:tint="@android:color/darker_gray"
                            app:backgroundTint="?android:attr/windowBackground"
                            app:fabSize="mini" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{wordDetailedViewModel.wordOfTheDay.attribute}"
                            android:textSize="@dimen/text_h5"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/padding_small"
                            android:text="@string/unicode_bullet"
                            android:textSize="@dimen/text_title" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{wordDetailedViewModel.wordOfTheDay.pronounce}"
                            android:textSize="@dimen/text_title" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:text="@{CommonUtils.formattedListToString(wordDetailedViewModel.wordOfTheDay.meanings,`\n`)}"
                        android:textSize="@dimen/text_h5" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{`How to use `+wordDetailedViewModel.wordOfTheDay.word}"
                            android:textSize="@dimen/text_sub_title"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{CommonUtils.formattedListToString(wordDetailedViewModel.wordOfTheDay.examples,`\n`)}"
                            android:textSize="@dimen/text_sub_title" />
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
