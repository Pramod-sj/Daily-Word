<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.pramod.dailyword.framework.firebase.FBRemoteConfig" />

        <import type="com.pramod.dailyword.framework.prefmanagers.ThemeManager" />

        <import type="com.pramod.dailyword.framework.util.CommonUtils" />

        <import type="com.pramod.dailyword.framework.util.CalenderUtil" />

        <variable
            name="word"
            type="com.pramod.dailyword.business.domain.model.Word" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_word_list_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/card_elevation_word_item">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_medium">


            <LinearLayout
                android:id="@+id/item_word_list_date"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/background_word_list_date"
                android:backgroundTint="@{CommonUtils.changeAlpha(CommonUtils.getColor(context,(ThemeManager.isNightModeActive(context)?word.wordDesaturatedColor:word.wordColor)),30)}"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

                <TextView
                    style="@style/AppTheme.SubTitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{CalenderUtil.getDayFromDateString(word.date,CalenderUtil.DATE_FORMAT)}"
                    android:textColor="@{CommonUtils.getColor(context,(ThemeManager.isNightModeActive(context)? word.wordDesaturatedColor:word.wordColor))}"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{CalenderUtil.getMonthFromDateString(word.date,CalenderUtil.DATE_FORMAT)}"
                    android:textColor="@{CommonUtils.getColor(context,(ThemeManager.isNightModeActive(context)?word.wordDesaturatedColor:word.wordColor))}"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/item_word_list_date"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/padding_medium"
                android:paddingVertical="@dimen/padding_small">

                <TextView
                    style="@style/AppTheme.Header5TextStyle.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:text="@{word.word}" />

                <TextView
                    style="@style/AppTheme.SmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{word.meanings.get(0)}" />
            </LinearLayout>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>
