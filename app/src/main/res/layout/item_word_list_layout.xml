<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.pramod.dailyword.framework.firebase.FBRemoteConfig" />

        <import type="com.pramod.dailyword.framework.prefmanagers.ThemeManager" />

        <import type="com.pramod.dailyword.framework.util.CommonUtils" />

        <import type="com.pramod.dailyword.framework.util.CalenderUtil" />

        <variable
            name="word"
            type="com.pramod.dailyword.business.domain.model.Word" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_word_list_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/card_elevation_word_item"
        app:rippleColor="@{CommonUtils.changeAlpha(CommonUtils.getColor(context,(ThemeManager.isNightModeActive(context)?word.wordDesaturatedColor:word.wordColor)),30)}">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_medium">


            <LinearLayout
                android:id="@+id/item_word_list_date"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/background_word_list_date"
                android:backgroundTint="@{CommonUtils.changeAlpha(CommonUtils.getColor(context,(ThemeManager.isNightModeActive(context)?word.wordDesaturatedColor:word.wordColor)),30)}"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

                <TextView
                    style="@style/AppTheme.SubTitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{CalenderUtil.getDayFromDateString(word.date,CalenderUtil.DATE_FORMAT)}"
                    android:textColor="@{CommonUtils.getColor(context,(ThemeManager.isNightModeActive(context)? word.wordDesaturatedColor:word.wordColor))}"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{CalenderUtil.getMonthFromDateString(word.date,CalenderUtil.DATE_FORMAT)}"
                    android:textColor="@{CommonUtils.getColor(context,(ThemeManager.isNightModeActive(context)?word.wordDesaturatedColor:word.wordColor))}"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/item_word_list_date"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/padding_medium"
                android:paddingVertical="@dimen/padding_small">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/AppTheme.Header5TextStyle.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:drawableEnd="@{word.seen?null:@drawable/background_circle_12dp}"
                    android:drawablePadding="@dimen/margin_medium"
                    android:text="@{word.word}" />

                <TextView
                    style="@style/AppTheme.SmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:text="@{word.meanings.get(0)}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:isGone="@{word.synonyms.size()==0 &amp;&amp; word.antonyms.size()==0}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:background="@drawable/background_curve"
                        android:backgroundTint="?colorPrimary"
                        android:paddingHorizontal="@dimen/padding_small"
                        android:text="@string/synonyms"
                        android:paddingVertical="2dp"
                        android:textColor="?android:attr/windowBackground"
                        android:textSize="@dimen/text_tiny"
                        app:isGone="@{word.synonyms.size()==0 }" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:background="@drawable/background_curve"
                        android:paddingVertical="2dp"
                        android:backgroundTint="?colorPrimary"
                        android:paddingHorizontal="@dimen/padding_small"
                        android:text="@string/antonyms"
                        android:textColor="?android:attr/windowBackground"
                        android:textSize="@dimen/text_tiny"
                        app:isGone="@{word.antonyms.size()==0}" />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>
